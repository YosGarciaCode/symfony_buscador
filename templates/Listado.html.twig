
{% extends "base.html.twig" %}
	
	{% block title %}Listado de pendientes{% endblock %}

    
	
    {% block body %}
	<body>
		<div class="container-fluid p-3 mb-2 bg-primary text-white">


			<form class="mx-auto" style="width: 900px;" id="miFormulario" action="#" method="post">
				<h1 class=" ">Gestor de tareas</h1>
           
                <hr style="margin-top: 1rem; margin-bottom: 1rem; border: 0; border-top: 3px solid white"> 
				<table>
					<tr>
						<th style="mx-auto">Listado:</th>
						<td style="padding: 20px; margin: 20px;">
							<input type="text" name="Listado" placeholder="listar tarea ..."/>
						</td>
                        
						<td style="padding: 20px; margin: 20px;">
							<input type="checkbox" name="ListadosDisponibles[]" value="php"/>
							PHP
